<h1>Event Details</h1>
<h2>Title: <%= @event.title %></h2>

<p>Location: <%= @event.location %></p>
<p>Date: <%= @event.date %></p>


<% if current_user != @event.creator%>
    <% unless @event.attendees.include?(current_user) %>
        <%= render partial: "become_attendee_form", locals: {event: @event} %>
    <%else%>
        <p>you (<%=current_user.email%>) are already attending this event </p>
    <% end %>
<% end %>

<%=link_to 'logout', destroy_user_session_path,data: { turbo_method: :delete } %><br><br>
<%= link_to 'create-events',new_event_path %> <br><br>
<%= link_to 'user created events',user_path(current_user) %> <br><br>