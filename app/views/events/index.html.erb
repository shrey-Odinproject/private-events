<h1>All Events From All Users</h1>

<ul>
  <% @events.each do |event| %>
    <li>
      <%= event.title %>
    </li>
  <% end %>
</ul>
                                   
<%# just added this logic but we can do without this extra login link case %>
<%= link_to 'create-events',new_event_path %> <br><br>

<%  if user_signed_in? %>
  <%=link_to 'logout', destroy_user_session_path,data: { turbo_method: :delete } %><br><br>
  <%= link_to 'user created events',user_path(current_user) %>
<% else%>
  <%= link_to 'login',new_session_path(User) %>
<% end %>

